<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.mstssk.o_notification.ChannelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/notify_with_no_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify with no channel." />

        <Button
            android:id="@+id/notify_with_1st_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify with 1st channel." />

        <Button
            android:id="@+id/notify_with_2nd_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify with 2nd channel." />

        <Button
            android:id="@+id/notify_with_configured_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify with configured channel." />

        <Button
            android:id="@+id/notify_with_3rd_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify with 3rd channel and group Foo." />

        <Button
            android:id="@+id/notify_with_4th_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify with 4th channel and group Foo." />

    </LinearLayout>
</ScrollView>
