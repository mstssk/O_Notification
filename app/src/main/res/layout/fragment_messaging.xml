<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.mstssk.o_notification.MessagingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/notify_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify message." />

        <Button
            android:id="@+id/notify_historic_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify historic message.(Only \'O\' or later.)" />

    </LinearLayout>

</FrameLayout>
